<Page
    x:Class="UPW.Pages.MedicationsMenuPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UPW.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <ScrollViewer HorizontalScrollMode="Auto"
                      VerticalScrollBarVisibility="Auto">
            <Grid Margin="50, 40, 10, 10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*" MinHeight="300"/>
                </Grid.RowDefinitions>
                <StackPanel Orientation="Horizontal">
                    <StackPanel>
                        <TextBlock Text="Medicações"
                               FontFamily="Segoe-UI"
                               FontSize="35"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Left"
                               Margin="0, 0, 0, 5">
                            <TextBlock.Foreground>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="#FF7185AB" Offset="1"/>
                                    <GradientStop Color="#FF436CB9" Offset="0.1"/>
                                </LinearGradientBrush>
                            </TextBlock.Foreground>
                        </TextBlock>
                        <StackPanel Orientation="Horizontal">
                            <Border x:Name="ManageClients"
                                Width="450"
                                Height="250"
                                CornerRadius="20">
                                <!--Tapped="ManageClients_Tapped"
                                PointerEntered="ManageClients_PointerEntered"
                                PointerExited="ManageClients_PointerExited">-->
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,3" 
                                                     EndPoint="1,0">
                                        <GradientStop Color="#FFC26E8D" Offset="0.5"/>
                                        <GradientStop Color="#FF8F5168" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>

                                <Border.Clip>
                                    <RectangleGeometry Rect="0, 0, 450, 250"/>
                                </Border.Clip>
                                <Grid>
                                    <StackPanel>
                                        <TextBlock FontFamily="Segoe-UI"
                                               Foreground="White"
                                               Text="Gerencie&#x0a;seus clientes"
                                               FontSize="36"
                                               Margin="25, 12, 0, 5"/>
                                        <TextBlock FontFamily="Segoe-UI"
                                               Foreground="White"
                                               Text="Informações sobre&#x0a;os residentes"
                                               FontSize="20"
                                               Margin="25, 0, 10, 0"/>
                                    </StackPanel>
                                    <Image Width="300"
                                    Height="340"
                                    Source="..\Assets\remedio.png"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Bottom" Margin="0,0,-54,10"/>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Margin="20, 0, 0, 0">
                        <TextBlock Text="Selecione um Residente"
                                       FontFamily="Segoe-UI"
                                       FontSize="35"
                                       FontWeight="SemiBold"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center">
                            <TextBlock.Foreground>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="#FF7185AB" Offset="1"/>
                                    <GradientStop Color="#FF436CB9" Offset="0.1"/>
                                </LinearGradientBrush>
                            </TextBlock.Foreground>
                        </TextBlock>
                        <ComboBox x:Name="ComboSelecione"
                                      FontFamily="Segoe-UI"
                                      FontSize="25"
                                      FontWeight="SemiBold"
                                      HorizontalAlignment="Left"
                                      Margin="0, 10, 0, 5">
                        </ComboBox>
                        <TextBlock Text="Selecione um Remédio"
                                       FontFamily="Segoe-UI"
                                       FontSize="35"
                                   Margin="0, 20, 0, 0"
                                       FontWeight="SemiBold"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center">
                            <TextBlock.Foreground>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="#FF7185AB" Offset="1"/>
                                    <GradientStop Color="#FF436CB9" Offset="0.1"/>
                                </LinearGradientBrush>
                            </TextBlock.Foreground>
                        </TextBlock>
                        <ComboBox x:Name="ComboRemedios"
                                      FontFamily="Segoe-UI"
                                      FontSize="25"
                                      FontWeight="SemiBold"
                                      HorizontalAlignment="Left"
                                      Margin="0, 10, 0, 5">

                        </ComboBox>

                    </StackPanel>
                </StackPanel>


                <ScrollViewer Grid.Row="1"
                              HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Disabled">
                    <StackPanel Grid.Row="1" 
                            VerticalAlignment="Center"
                            Margin="0, 20, 0, 0">
                        <TextBlock Text="Opções"
                           FontFamily="Segoe-UI"
                           FontSize="35"
                           FontWeight="SemiBold"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center">
                            <TextBlock.Foreground>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="#FF7185AB" Offset="1"/>
                                    <GradientStop Color="#FF436CB9" Offset="0.1"/>
                                </LinearGradientBrush>
                            </TextBlock.Foreground>
                        </TextBlock>
                        <StackPanel Orientation="Horizontal">
                            <Border x:Name="AtualizarRemedios"
                                    Width="250"
                                    Height="250"
                                    CornerRadius="20">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,3" 
                                  EndPoint="1,0">
                                        <GradientStop Color="#FFC26EBF" Offset="0.5"/>
                                        <GradientStop Color="#FFA86EC2" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>

                                <Border.Clip>
                                    <RectangleGeometry Rect="0, 0, 250, 250"/>
                                </Border.Clip>
                                <Grid>
                                    <StackPanel>
                                        <TextBlock FontFamily="Segoe-UI"
                                           Foreground="White"
                                           Text="Atualizar&#x0a;remédio"
                                           FontSize="36"
                                           Margin="25, 12, 0, 5"/>
                                        <TextBlock FontFamily="Segoe-UI"
                                           Foreground="White"
                                           Text="Atualizar quantidade&#x0a;de um remédio;"
                                           FontSize="20"
                                           Margin="25, 0, 10, 0"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                            <Border x:Name="VisualizarRemedios"
                                    Width="250"
                                    Height="250"
                                    CornerRadius="20"
                                    Margin="40,0,0,0">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,3" 
                                  EndPoint="1,0">
                                        <GradientStop Color="#FFC26E7A" Offset="0.5"/>
                                        <GradientStop Color="#FFC25D4D" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>

                                <Border.Clip>
                                    <RectangleGeometry Rect="0, 0, 250, 250"/>
                                </Border.Clip>
                                <Grid>
                                    <StackPanel>
                                        <TextBlock FontFamily="Segoe-UI"
                                           Foreground="White"
                                           Text="Visualizar&#x0a;remédios"
                                           FontSize="36"
                                           Margin="25, 12, 0, 5"/>
                                        <TextBlock FontFamily="Segoe-UI"
                                           Foreground="White"
                                           Text="Verificar informaçõe&#x0a;sobre os remédios &#x0a;de um residente"
                                           FontSize="20"
                                           Margin="25, 0, 10, 0"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
